NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/payfac_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Gateway - Choose Stripe OR PayPal OR Ecocash
PAYMENT_PROVIDER=ecocash # Options: stripe, paypal, ecocash

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (Alternative)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# PAYPAL_MODE=sandbox

# Ecocash (Alternative)
ECOCASH_API_KEY=your_ecocash_api_key
ECOCASH_API_SECRET=your_ecocash_api_secret
ECOCASH_MERCHANT_ID=your_ecocash_merchant_id
ECOCASH_ENVIRONMENT=sandbox # Options: sandbox, production

# Pool Account Configuration
POOL_INITIAL_BALANCE=10000.00
POOL_MIN_BALANCE=1000.00

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100