# Application
NODE_ENV=development
PORT=3000
APP_NAME=Payment Facilitator Platform
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/payfac_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=payfac-platform
JWT_AUDIENCE=payfac-api

# External Payment Gateway (xash.co.zw)
# Production Gateway
GATEWAY_BASE_URL=https://xv.xash.co.zw/api/v1
# Development Gateway  
GATEWAY_BASE_URL_DEV=https://xvdev.xash.co.zw/api/v1
# Gateway Credentials
GATEWAY_USER_NUMBER=your_user_number_here
GATEWAY_PASSWORD=Password123

# Pool Account Configuration
POOL_INITIAL_BALANCE=10000.00
POOL_MIN_BALANCE=1000.00
POOL_ALERT_THRESHOLD=2000.00
POOL_CURRENCY=USD

# Auto-sync pool balance with gateway (in minutes)
POOL_SYNC_INTERVAL=30

# Transaction Limits
MIN_TRANSACTION_AMOUNT=1.00
MAX_TRANSACTION_AMOUNT=10000.00
MIN_DEPOSIT_AMOUNT=10.00
MAX_DEPOSIT_AMOUNT=50000.00
MIN_PAYOUT_AMOUNT=10.00
DAILY_TRANSACTION_LIMIT=50000.00

# Email Configuration
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Payment Facilitator Platform

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=false

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_REFUNDS=true
ENABLE_PAYOUTS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_DIRECTORY=./logs

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_LOGGING=false